<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RecipeApp" parent="Base.Theme.RecipeApp" />

    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="iconTint">@color/colorBoulder</item>
        <item name="iconSize">24dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!-- TextView styles. -->

    <style name="TextView.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/</item>
    </style>

    <style name="TextView.SemiBold" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TextView.Toolbar" parent="TextView.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="fontFamily">@font/quicksand_medium</item>
    </style>

    <style name="TextView.Title.Section" parent="TextView.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="fontFamily">@font/quicksand_medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.075</item>
    </style>

    <!-- End of TextView styles. -->
</resources>